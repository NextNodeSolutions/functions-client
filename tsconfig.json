{
	"extends": "@nextnode/standards/typescript/library",
	"compilerOptions": {
		// TypeScript Paths
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@/types/*": ["./types/*"]
		},

		// JSX support for React
		"jsx": "react-jsx",

		// Temporarily disable for image library compatibility
		"exactOptionalPropertyTypes": false,

		// DOM types for React components
		"lib": ["ES2022", "DOM", "DOM.Iterable"],

		// Types
		"types": ["node", "vitest/globals"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"types/**/*.ts",
		"*.config.*",
		"vitest.config.ts"
	],
	"exclude": ["node_modules", "dist", "tests/coverage"]
}
