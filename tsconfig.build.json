{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
